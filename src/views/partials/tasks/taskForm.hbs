<div class="card card-body p-4 rounded-0">
  <h3>Add A Task</h3>
  <form action="/tasks/add" method="post">

    {{! Title Input }}
    <div class="mb-3">
      <label for="title">Write a title:</label>
      <input id="title" class="form-control rounded-0" type="text" name="title" placeholder="Title" autofocus />
    </div>

    {{! Description Input }}
    <div class="mb-3">
      <label for="description">Description</label>
      <textarea class="form-control rounded-0" name="description" cols="80" placeholder="Add a Description"></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Add</button>
  </form>
</div>